<view:WindowView x:Class="BrowserApp.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:view="clr-namespace:PresenterBase.View;assembly=PresenterBase"
                 xmlns:global="clr-namespace:"
                 mc:Ignorable="d"
                 Title="BrowserWPF" Height="800" Width="1200"
                 d:DataContext="{d:DesignInstance global:MainViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Title}" />
            <ContentControl x:Name="TopPanelContent" />
            <ContentControl x:Name="PageContent" />
        </StackPanel>
    </Grid>
</view:WindowView>

